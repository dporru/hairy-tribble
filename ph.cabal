    text >= 1.2 && < 1.3,
    time >= 1.4 && < 1.6,
    transformers >= 0.4 && < 0.5
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:
    OverloadedStrings,
    DeriveGeneric,
    DeriveDataTypeable,
    ScopedTypeVariables,
    TypeFamilies

