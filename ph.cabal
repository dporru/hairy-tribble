cabal-version:       >= 1.10

library
  exposed-modules:
    PH.Types,
    PH.Types.Dated,
    PH.Types.JSON,
    PH.Types.Labelled,
    PH.Types.Storage
  other-modules:
    Common
  build-depends:
    aeson >= 0.8 && < 0.10,
    base >= 4.7 && < 4.9,
